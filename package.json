{
  "name": "clada-storybook",
  "version": "0.1.0",
  "private": true,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "./esm/types/index.d.ts",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:project && npm run build:copy-files && npm run build:tailwind",
    "build:clean": "rm -rf dist",
    "build:project": "tsc -p ./tsconfig.esm.json && tsc -p ./tsconfig.cjs.json",
    "build:copy-files": "cp ./package.json ./dist && cp ./README.md ./dist && cp ./LICENSE ./dist",
    "build:tailwind": "tailwindcss -i ./src/index.css -o ./dist/style.css --minify && cp ./tailwind.config.js ./dist",
    "test": "react-scripts test",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./esm/types/index.d.ts",
        "default": "./esm/index.js"
      },
      "require": {
        "types": "./cjs/types/index.d.ts",
        "default": "./cjs/index.cjs"
      }
    },
    "./style.css": "./style.css",
    "./tailwind.config.ts": "./tailwind.config.jss"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:storybook/recommended"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "files": [
    "dist",
    "tailwind.config.js"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@storybook/addon-essentials": "^7.4.1",
    "@storybook/addon-interactions": "^7.4.1",
    "@storybook/addon-links": "^7.4.1",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/blocks": "^7.4.1",
    "@storybook/react": "^7.4.1",
    "@storybook/react-webpack5": "^7.4.1",
    "@storybook/testing-library": "^0.2.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "autoprefixer": "^10.4.15",
    "eslint-plugin-storybook": "^0.6.13",
    "postcss": "^8.4.29",
    "prop-types": "^15.8.1",
    "react-scripts": "5.0.1",
    "storybook": "^7.4.1",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "web-vitals": "^2.1.4"
  }
}
